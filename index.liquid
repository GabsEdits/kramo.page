<style>
    @keyframes card-appear {
        from {
            transform: translateY(25px);
        }
        to {
            transform: translateY(0);
        }
    }

    body {
        min-width: 22em;
    }

    .card {
        margin: 0 auto 2em auto;
        padding: 2.5em 1em;
        max-width: 30em;
        border-radius: 18px;
        animation: card-appear forwards;
    }

    .card a,
    .card a:hover {
        color: inherit;
    }

    .card a.button {
        border-color: rgb(255 255 255 / 7%);
        background-color: rgb(255 255 255 / 15%);
        color: white;
    }

    .card a.button.suggested {
        background-color: white;
        color: black;
    }

    .card img {
        border-radius: initial;
    }

    @media (prefers-reduced-motion) {
        .card {
            animation: initial;
        }
    }
</style>

<main id="content">
    <br />
    {% for item in home %} {% if item.url %}
    <a href="{{ item.url }}">
        {% endif %}
        <div
            class="card"
            style="
                animation-duration: {{ forloop.index0 | times: 0.1 | plus: 0.6 }}s;
                color: #{{ item.color }};
                background: {{ item.bg }};
            "
        >
            {{ item.content }} {% unless item.content %} {% if item.img %}
            <img aria-hidden="true" {{ item.img }} />
            {% else %}
            <p style="height: 17em" />
            {% endif %}
            <h1>{{ item.name }}</h1>
            <p>
                {{ item.desc }}<span class="arrow" aria-hidden="true">â†’</span>
            </p>
            {% endunless %}
        </div>
        {% if item.url %}
    </a>
    {% endif %} {% endfor %} {% include "back-to-top.liquid" %}
</main>
